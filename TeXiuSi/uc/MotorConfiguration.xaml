<UserControl x:Class="TeXiuSi.uc.MotorConfiguration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TeXiuSi.uc"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="850" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <x:Array x:Key="JointNames" Type="sys:String">
                <sys:String>关节1</sys:String>
                <sys:String>关节2</sys:String>
                <sys:String>关节3</sys:String>
                <sys:String>关节4</sys:String>
                <sys:String>关节5</sys:String>
                <sys:String>关节6</sys:String>
                <sys:String>全部关节</sys:String>
            </x:Array>
            <x:Array x:Key="ConditiontNames" Type="sys:String">
                <sys:String>使能</sys:String>
                <sys:String>失能</sys:String>
            </x:Array>
            <x:Array x:Key="Installation" Type="sys:String">
                <sys:String>无效值</sys:String>
                <sys:String>水平侧装</sys:String>
                <sys:String>侧装（左）</sys:String>
                <sys:String>侧装（右）</sys:String>
            </x:Array> 
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="电机设置" HorizontalAlignment="Left">
                <GroupBox
  Margin="16"
  materialDesign:ElevationAssist.Elevation="Dp6"
  Header="电机设置"
  Style="{StaticResource MaterialDesignCardGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="23" > 电机状态:</TextBlock>
                        <ComboBox
x:Name="Joint"  Grid.Column="1"
Width="150" HorizontalAlignment="Center"
Style="{StaticResource MaterialDesignOutlinedComboBox}" 
ItemsSource="{StaticResource JointNames}" 
SelectedIndex="0"
/>
                        <ComboBox
x:Name="condition"  Grid.Column="2"
Width="150" HorizontalAlignment="Center"
Style="{StaticResource MaterialDesignOutlinedComboBox}" 
ItemsSource="{StaticResource ConditiontNames}" 
SelectedIndex="0"
/>
                        <Button Width="180" Height="50" Grid.Column="3"
Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
        Kind="SendVariantOutline" 
        Margin="0 0 8 0" />
                                <TextBlock
        Text="确认" />
                            </StackPanel>
                        </Button>
                        <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="23" > 零点设置:</TextBlock>
                        <ComboBox
x:Name="Joint1"  Grid.Column="2" Grid.Row="1"
Width="150" HorizontalAlignment="Center"
Style="{StaticResource MaterialDesignOutlinedComboBox}" 
ItemsSource="{StaticResource JointNames}" 
SelectedIndex="0"
/>
                        <Button Grid.Row="1" Width="180" Height="50" Grid.Column="3"
Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
        Kind="SendVariantOutline" 
        Margin="0 0 8 0" />
                                <TextBlock
        Text="确认" />
                            </StackPanel>
                        </Button>
                        <TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="23" > 安装设置:</TextBlock>
                        <ComboBox
x:Name="Installation"  Grid.Column="2" Grid.Row="2"
Width="150" HorizontalAlignment="Center"
Style="{StaticResource MaterialDesignOutlinedComboBox}" 
ItemsSource="{StaticResource Installation}" 
SelectedIndex="0"
/>
                        
                        <Button Grid.Row="2" Width="180" Height="50" Grid.Column="3"
Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
        Kind="SendVariantOutline" 
        Margin="0 0 8 0" />
                                <TextBlock
        Text="确认" />
                            </StackPanel>
                        </Button>
                        <TextBlock Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="23" > 清除错误:</TextBlock>
                        <Button Grid.Row="3" Width="180" Height="50" Grid.Column="3"
Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
        Kind="SendVariantOutline" 
        Margin="0 0 8 0" />
                                <TextBlock
        Text="确认" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </GroupBox>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
