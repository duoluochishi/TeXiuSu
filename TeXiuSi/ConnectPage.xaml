<Window x:Class="TeXiuSi.ConnectPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TeXiuSi" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="#f0f0f0"
        Title="Connect" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <materialDesign:Card >
            <TabControl 
    materialDesign:ColorZoneAssist.Mode="PrimaryMid"
    Style="{StaticResource MaterialDesignFilledTabControl}">
                <TabItem
      Header="CAN">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="0 0 10 0"> CAN：</TextBlock>
                        <ComboBox Grid.Column="1"
Width="256" Height="30"


Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                    </Grid>
                </TabItem>
                <TabItem
      Header="Tcp">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="0 0 10 0"> IP：</TextBlock>
                        <ComboBox Grid.Column="1"
Width="256" Height="30"

Style="{StaticResource MaterialDesignOutlinedComboBox}" />
                    </Grid>
                </TabItem>
            </TabControl>
        </materialDesign:Card>
        <Button Grid.Row="1" Width="70" Height="30" HorizontalAlignment="Right" Margin="0 0 10 0" Command="{Binding ConnectCommand}" >连接</Button>
    </Grid>
</Window>
